#!/usr/bin/env bash
run_composer() {
  composer install --no-dev --optimize-autoloader --ignore-platform-reqs

  chmod -R 777 web/cpresources
  mkdir -p storage/runtime
  chmod -R 777 storage

  php ./craft migrate/all
  php ./craft project-config/sync
  php ./craft clear-caches/all
}

run_composer || true
