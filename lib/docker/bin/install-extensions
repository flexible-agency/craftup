#!/usr/bin/env bash
set -e

install_php_extensions() {
  docker-php-ext-configure opcache --enable-opcache

  docker-php-ext-install \
    pdo_mysql \
    gd \
    opcache \
    zip \
    bcmath

  pecl install \
    imagick \
    redis \
    mcrypt

  docker-php-ext-enable \
    imagick \
    redis \
    gd \
    bcmath
}

install_php_extensions
